<div class="container">

  <div class="row">
    <div class="col-sm-4 col-md-4 ">
      <h2 class="text-center">重置密码</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
          <%= f.input :email, placeholder: '请输入邮箱' %>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-12">
                <div class="row">
                  <div class="col-xs-7">
                    <div class="<%= "form-group string #{request.post? && resource.status==1000 ? 'has-error' : ''}" %>">
                      <label class="string control-label">
                        验证码
                      </label>
                      <%= rucaptcha_input_tag(class: 'form-control ', placeholder: '请输入校验码') %>
                      <% if request.post? && resource.status==1000 %>
                          <span class="help-block">验证码不正确</span>
                      <% end %>
                    </div>
                  </div>
                  <div class="col-xs-5" style="margin-top: 25px">
                      <span class="refresh-captcha">
                        <%= rucaptcha_image_tag(alt: '校验码', id: 'rucaptcha-image-style') %>
                      </span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="actions form-group form-group-lg">
            <%= f.submit class: 'btn btn-danger btn-block', value: '发送重置密码邮件', 'data-disable-with' => '发送重置密码邮件' %>
          </div>
      <% end %>
      <p class="clearfix text-right">
        <a class="exchange-mobile" href="<%= reset_password_accounts_path %>">使用手机重置</a>
      </p>
    </div>

  </div>
</div>



