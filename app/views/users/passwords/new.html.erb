<div class="floor" id="register">
  <div id="nav" class="nav-v2 container-layer">
    <%= render 'layouts/nav_menu' %>
  </div>
  <div id="register-content" class="">
    <div class="passport">
      <div class="passport-title t-22 text-center">
        重置密码
      </div>
      <div class="passport-content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
            <div class="field form-group">
              <label for="user_email" class="control-label">邮箱:</label><br/>
              <%= f.email_field :email, autofocus: true, placeholder: '请输入邮箱', class: 'form-control' %>
              <span id="" class="" style="right: 8px;bottom: 8px;position: absolute;color: darkred">
                <% if resource.errors[:email].present? %>
                <ul>
                  <% resource.errors[:email].each do |msg| %>
                      <li>该邮箱用户<%= msg %></li>
                  <% end %>
                </ul>
                <% end %>
              </span>
            </div>

            <div class="actions">
              <%= f.submit class: 'btn-forget-send', value: '发送重置邮件' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>