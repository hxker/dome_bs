<!DOCTYPE html>
<html>
<head>
  <%= render_page_title %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <link rel="icon" href="<%= asset_path('icon.png') %>"/>
  <%= csrf_meta_tags %>
  <%= action_cable_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => false %>

</head>

<body>
<div class="navbar-wrapper">
  <nav class="navbar navbar-default nav-custom navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand navbar-padding" href="/">豆姆科技</a>
        <!-- begin visible xs -->
        <% if user_signed_in? %>

            <span class="navbar-padding navbar-brand pull-right visible-xs btn" data-toggle="collapse" data-target="#navbar_user" aria-expanded="false" aria-controls="navbar">
              <span class="caret"></span>
            </span>
        <% else %>
            <a class="navbar-brand pull-right visible-xs navbar-padding" href="<%= new_user_registration_path %>">注册</a>
            <a class="navbar-brand pull-right visible-xs navbar-padding" href="<%= new_user_session_path %>">登录</a>

        <% end %>
        <!-- end visible xs -->
      </div>
      <!-- begin hidden xs -->
      <ul class="nav navbar-nav navbar-right hidden-xs">
        <% if user_signed_in? %>
            <li class="dropdown">

              <ul class="dropdown-menu" role="menu">
                <% if current_user %>
                    <li>
                      <a href="<%= "#" %>">我的账户<span class="visible-xs pull-right">[ <%= current_user.nickname %>
                        ]</span></a>
                    </li>
                    <li class="nav-divider visible-xs"></li>
                    <li class="divider hidden-xs"></li>
                    <li>
                      <a href="#">我的收藏</a>
                    </li>
                    <li class="nav-divider visible-xs"></li>
                    <li class="divider hidden-xs"></li>

                <% end %>
              </ul>
            </li>
            <li>
              <%= link_to '退出', destroy_user_session_path, method: :delete, data: {confirm: '确认退出登录吗?'} %>
            </li>
        <% else %>
            <li><%= link_to '注册', new_user_registration_path %></li>
            <li><%= link_to '登录', new_user_session_path %></li>
        <% end %>
      </ul>
      <!-- end hidden xs -->
      <!-- begin main menu -->
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav nav-li">
          <li>
            <a href="<%= "#" %>">比赛</a>
          </li>
          <li class="nav-divider"></li>
          <li>
            <a href="<%= "#" %>">课程</a>
          </li>

        </ul>
      </div>
      <!-- end main menu -->
      <!-- begin user menu visible xs -->
      <div id="navbar_user" class="navbar-collapse collapse">
        <ul class="nav navbar-nav visible-xs">
          <% if current_user %>
              <li>
                <a href="<%= "#" %>">我的账户<span class="visible-xs pull-right">[ <%= current_user.nickname %>
                  ]</span></a>
              </li>
              <li class="nav-divider visible-xs"></li>
              <li class="divider hidden-xs"></li>
              <li>
                <a href="#">我的收藏</a>
              </li>
              <li class="nav-divider visible-xs"></li>
              <li class="divider hidden-xs"></li>

          <% end %>
        </ul>
      </div>
      <!-- end user menu -->
    </div>
  </nav>
</div>

<%= yield %>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<% if flash.present? %>
    <script type="text/javascript">
      <% flash.each do |f| %>
      $.notify("<%= f[1] %>", "<%= f[0] %>");
      <% end %>
    </script>
<% end %>
</body>
</html>
